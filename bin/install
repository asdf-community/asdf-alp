set -eo pipefail

function fail() {
  echo -e "\e[31mFail:\e[m $* ðŸ˜­"
  exit 1
}

function install_alp() {
  local install_type=$1
  local version=$2
  local install_path=$3

  local platform

  case "$OSTYPE" in
    darwin*) platform="darwin" ;;
    freebsd*) platform="freebsd" ;;
    linux*) platform="linux" ;;
    netbsd*) platform="netbsd" ;;
    openbsd*) platform="openbsd" ;;
    *) fail "Unsupported platform" ;;
  esac

  local architecture

  case "$(uname -m)" in
    x86_64) architecture="amd64" ;;
    i386 | i686) architecture="386" ;;
    arm | aarch64)
      case "$platform" in
        freebsd | arm | netbsd) exit 0 ;;
        *) fail "Unsupported platform and architecture combination" ;;
      esac
      architecture="arm"
      ;;
    *) fail "Unsupported architecture" ;;
  esac

  local download_url="https://github.com/tkuchiki/alp/releases/download/v${version}/alp_${platform}_${architecture}.zip"
  local source_path="${install_path}/bin/alp.zip"
  local distination_path="${install_path}/bin"

  (
    echo "âˆ— Downloading and installing alp..."
    mkdir -p "${install_path}/bin"
    curl --silent --location --create-dirs --output "$source_path" "$download_url" || fail "Could not download alp $version"
    unzip "$source_path" >/dev/null || fail "Could not uncompress"
    rm "$source_path"
    mv alp* alp
    chmod +x "${distination_path}/alp" || fail "Could not find alp binary"
    echo "The installation was successful!"
  ) || (
    rm -rf $install_path
    fail "An error occurred"
  )
}

install_alp "$ASDF_INSTALL_TYPE" "$ASDF_INSTALL_VERSION" "$ASDF_INSTALL_PATH"
